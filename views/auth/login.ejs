<div class="container display-border-3">
    <form action="/login" method="POST">
        <br>
        <% if (errormessage) { %>
            <div class="form-group row fade-away">
                <label  class="col-sm-2 col-form-label font-edit"  ><strong> </strong></label>
                <div class="col-sm-5">
                <input style="background-color:red; color: white; font-style:bold;" class="form-control error" type="text"  value="<%= errormessage%>" readonly>
                </div>
            </div>
        <% } %>
        <div class="form-group row ">
            <label  class="col-sm-2 col-form-label font-edit"  for="user_name"><strong>User Name </strong></label>
            <div class="col-sm-5">
            <input class="form-control" type="text" name="user_name" id="user_name" placeholder="Enter user name" autocomplete="off" required>
            </div>
        </div>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label font-edit" for="password"><strong>Password </strong></label>
            <div class="col-sm-5">
            <input class="form-control" type="password" name="password" id="password" placeholder="Enter password" required>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 ">
              <button style="margin-left:145px;"   type="submit" class="btn btn-success  btn-block"><strong>Login</strong></button>
            </div>
        </div>
        <div class="form-group row">
            <label  class="col-sm-3 col-form-label" ><strong>Don't have a Account ? </strong></label>
            <label  class="col-sm-3 col-form-label" ><a href="/register">Register Here</a></label>
        </div>
        
    
    </form>
</div>
<script src="/js/auth.js"></script>
<%- include('../includes/end.ejs') -%>