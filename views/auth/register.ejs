<div class="container display-border-3 ">
    <form action="/register" method="POST" novalidate>
        <br>
        <% if (errormessage) { %>
            <div class="form-group row fade-away">
                <label  class="col-sm-2 col-form-label font-edit" ><strong> </strong></label>
                <div class="col-sm-5">
                <input style="background-color:red; color: white; font-style:bold;" class="form-control error" type="text"   value="<%= errormessage%>" readonly>
                </div>
            </div>
        <% } %>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label font-edit"  for="user_name"><strong>User Name </strong></label>
            <div class="col-sm-5">
            <input class="form-control" type="text" name="user_name" id="user_name" placeholder="This is required for log in" autocomplete="off">
            </div>
        </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-edit" for="first_name"><strong>First Name </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="first_name" id="first_name" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="middle_name"><strong>Middle Name </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="middle_name" id="middle_name" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label font-edit"  for="last_name"><strong>Last Name </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="last_name" id="last_name" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="dob"><strong>Date Of Birth </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="dob" id="dob" placeholder="dd-mm-yyyy" required autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="email"><strong>Email </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="email" name="email" id="email" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="phone_number"><strong>Phone No </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="number" name="phone_number" id="phone_number" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="password"><strong>Password </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="password" name="password" id="password">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="confirm_password"><strong>Confirm password </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="confirm_password" id="confirm_password" autocomplete="off">
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-2 col-form-label font-edit" for="address"><strong>Address  </strong></label>
                <div class="col-sm-5">
                <input class="form-control" type="text" name="address" id="address" required>
                </div>
            </div>
           
            <div class="form-group row">
               
                <div class="col-sm-5">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1" name="gridCheck1" required>
                    <label class="form-check-label" for="gridCheck1">
                      Accept terms and conditions
                    </label>
                  </div>
                </div>
            </div>
            <div class="form-group row ">
                <div class="col-sm-5 ">
                  <button type="submit" class="btn btn-success btn-lg "><strong>Register</strong></button>
                </div>
            </div>
            <div class="form-group row">
                <label  class="col-sm-3 col-form-label" ><strong>Already have a account ? </strong></label>
                <label  class="col-sm-3 col-form-label" ><a href="/login">Login  Here</a></label>
            </div>
    </form>
</div>
<script src="/js/auth.js"></script>
<%- include('../includes/end.ejs') -%>